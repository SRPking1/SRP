        app:layout_constraintVertical_bias="0.903" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/self_mic_off"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:src="@drawable/ic_baseline_mic_off_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.903"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/msg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_more_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/chat"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.903" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/speaker_on"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/appCompatButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.903" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/speaker_off"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_volume_off_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/appCompatButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.903" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smiley"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_tag_faces_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="@+id/chat"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.903" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/power_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_power_settings_new_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/more_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_oval"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_message_24"
        app:layout_constraintBottom_toTopOf="@+id/smiley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <LinearLayout
        android:id="@+id/activity_event"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:background="#80000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        app:layout_constraintVertical_bias="0.787" />

