    <LinearLayout
        android:id="@+id/total_diamond"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:background="@drawable/custom_oval_rec"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/seat_1"
        app:layout_constraintEnd_toStartOf="@+id/host"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        app:layout_constraintVertical_bias="0.294" />

    <LinearLayout
        android:id="@+id/viewers"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginStart="296dp"
        android:background="@drawable/custom_oval_rec_right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/seat_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_diamond"
        app:layout_constraintTop_toBottomOf="@+id/power_btn"
        app:layout_constraintVertical_bias="0.329">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_viewers_outline_24"
            android:gravity="center"
            android:padding="5dp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/host"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/ic_join"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintVertical_bias="0.239" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seat_1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:src="@mipmap/ic_join"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/seat_5"
        app:layout_constraintEnd_toStartOf="@+id/seat_2"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seat_5"
        android:layout_width="55dp"
        android:layout_height="55dp"
